{% extends 'base.html.twig' %}

{% block title %}Kitchen{% endblock %}

{% block body %}
    <h1>Kitchen</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ kitchen.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ kitchen.name }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ kitchen.published ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_kitchen_index') }}">back to list</a>

    <a href="{{ path('app_kitchen_edit', {'id': kitchen.id}) }}">edit</a>

    <h2>Cookbooks</h2>
    <ul>
        {% for cookbook in kitchen.book %}
            <li>
                <a href="{{ path('app_kitchen_cookbook_show', {'kitchen_id': kitchen.id, 'cookbook_id' : cookbook.id}) }}">{{ cookbook }}</a>
            </li>
        {% endfor %}
    </ul>

    {{ include('kitchen/_delete_form.html.twig') }}
{% endblock %}
