{% extends 'base.html.twig' %}

{% block title %}Bookshelf index{% endblock %}

{% block body %}
    <h1>Bookshelf index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Shelf</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bookshelf in bookshelves %}
            <tr>
                <td>{{ bookshelf.id }}</td>
                <td>{{ bookshelf.shelf }}</td>
                <td>
                    <a href="{{ path('app_bookshelf_show', {'id': bookshelf.id}) }}">show</a>
                    <a href="{{ path('app_bookshelf_edit', {'id': bookshelf.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% for bookshelf in bookshelves %}
    <a href="{{ path('app_bookshelf_new', {'id': bookshelf.member.id})}}">Create new</a>
    {% else %}
        <tr>
            <td colspan="3">no records found</td>
        </tr>
    {% endfor %}
{% endblock %}
