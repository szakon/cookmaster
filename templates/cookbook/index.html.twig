{% extends 'base.html.twig' %}

{% block title %}Cookbook index{% endblock %}

{% block body %}
    <h1>Cookbook index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Cuisine</th>
                <th>Year</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cookbook in cookbooks %}
            <tr>
                <td>{{ cookbook.id }}</td>
                <td>{{ cookbook.title }}</td>
                <td>{{ cookbook.author }}</td>
                <td>{{ cookbook.cuisine }}</td>
                <td>{{ cookbook.year }}</td>
                <td>
                    <a href="{{ path('app_cookbook_show', {'id': cookbook.id}) }}">show</a>
                    <a href="{{ path('app_cookbook_edit', {'id': cookbook.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cookbook_new') }}">Create new</a>
{% endblock %}
